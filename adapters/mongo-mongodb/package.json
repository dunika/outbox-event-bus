{
  "name": "@outbox-event-bus/mongo-mongodb-outbox",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dunika/outbox-event-bus.git",
    "directory": "adapters/mongo-mongodb"
  },
  "homepage": "https://github.com/dunika/outbox-event-bus/tree/main/adapters/mongo-mongodb#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run -c vitest.config.ts",
    "test:e2e": "docker-compose up -d --wait && vitest run src/e2e.test.ts; status=$?; docker-compose down; exit $status"
  },
  "dependencies": {
    "mongodb": "^7.0.0",
    "outbox-event-bus": "workspace:*"
  },
  "devDependencies": {
    "@outbox-event-bus/config": "workspace:*",
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
