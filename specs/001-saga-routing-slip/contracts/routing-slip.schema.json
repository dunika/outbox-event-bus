{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RoutingSlip",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "mode": {
      "type": "string",
      "enum": ["forward", "compensate"]
    },
    "itinerary": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ActivityDefinition"
      }
    },
    "log": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ActivityLogEntry"
      }
    },
    "variables": {
      "type": "object",
      "additionalProperties": true
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["Pending", "Completed", "Compensating", "Faulted"]
    }
  },
  "required": ["id", "mode", "itinerary", "log", "variables", "expiresAt", "status"],
  "definitions": {
    "ActivityDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "arguments": {
          "type": "object"
        }
      },
      "required": ["name", "arguments"]
    },
    "ActivityLogEntry": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "compensationData": {
          "type": "object"
        }
      },
      "required": ["name", "timestamp", "compensationData"]
    }
  }
}
