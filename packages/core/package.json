{
  "name": "outbox-event-bus",
  "version": "2.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dunika/outbox-event-bus.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/dunika/outbox-event-bus/tree/main/packages/core#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "rm -rf ./docs ./README.md && cp ../../README.md ./README.md && cp -r ../../docs ./docs",
    "lint": "eslint .",
    "test": "vitest run",
    "format": "biome check --write .",
    "format:check": "biome check ."
  },
  "devDependencies": {
    "@outbox-event-bus/config": "workspace:*",
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  }
}
